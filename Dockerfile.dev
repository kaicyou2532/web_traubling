# 開発用Dockerfile - Next.js + Prisma
FROM node:18-alpine

# 必要なパッケージをインストール
RUN apk add --no-cache libc6-compat openssl

WORKDIR /app

# 依存関係をインストール
COPY package.json package-lock.json* ./
RUN npm ci --legacy-peer-deps

# Prismaスキーマをコピーしてクライアントを生成
COPY prisma ./prisma/
RUN npx prisma generate

# Prisma設定をコピー
COPY prisma ./prisma

# Prisma クライアントを生成
RUN npx prisma generate

# ソースコードをコピー
COPY . .

# ポート3000を公開
EXPOSE 3000

# 開発サーバーを実行
CMD ["npm", "run", "dev"]
